    <!--修改密码的警示说明-->
    <style name="ModifyDialogNoticeTv">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="ModifyPasswordEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/split_line_color</item>
        <item name="colorControlActivated">@color/main_color</item>
    </style>
    <!--密码输入框的-->
    <style name="ModifyDialogAppCompactEditText">
        <item name="android:layout_width">300dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLength">12</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textCursorDrawable">@drawable/curse</item>
        <item name="android:theme">@style/ModifyPasswordEditText</item>
        <item name="android:singleLine">true</item>
    </style>
    <!--密码输入框的父控件-->
    <style name="ModifyDialogPasswordRl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginLeft">@dimen/modify_dialog_gap_left_right</item>
        <item name="android:layout_marginRight">@dimen/modify_dialog_gap_left_right</item>
    </style>

    <style name="LittleEye">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">@dimen/modify_dialog_gap_left_right</item>
    </style>

    <style name="mnnemonic_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="mnemonic_edit_text">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:maxLength">12</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/dialog_import_private_key_et</item>
    </style>

    <!--我的界面的-->
    <style name="A_Style_tab_mine">

        <item name="android:textColor">@color/library_33</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textSize">@dimen/txt_16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="A_Style_tab_mine_split_line">
        <item name="android:textColor">@color/library_33</item>
        <item name="android:textSize">@dimen/txt_16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/h05</item>
        <item name="android:background">@color/line</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="A_Style_tab_mine_item_container">
        <item name="android:layout_marginLeft">@dimen/padding_size_16dp</item>
        <!--<item name="android:layout_marginTop">@dimen/padding_size_16dp</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/h60</item>
        <item name="android:layout_marginRight">@dimen/padding_size_16dp</item>
    </style>

    <style name="A_Style_tab_mine_item_image">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
   
</resources>
