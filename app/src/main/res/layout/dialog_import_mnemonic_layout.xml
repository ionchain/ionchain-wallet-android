<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/h5"
    android:paddingRight="@dimen/h5"
    android:paddingTop="5dp"
    android:background="@drawable/dialog_import_mnemonic"
    android:layout_height="wrap_content">
    <TextView
        android:text="@string/forbidden_photo"
        android:gravity="center|left"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:paddingStart="@dimen/margin_h20"
        android:paddingEnd="@dimen/margin_h20"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/title_size"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/import_mnemonic_tv"
        android:layout_width="match_parent"
        android:gravity="center|left"
        android:padding="@dimen/dp_10"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text=""
        android:layout_height="100dp" />
    <View
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:layout_height="1dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_h20"
        android:paddingEnd="@dimen/margin_h20"
        android:text="@string/restore_by_mnemonics_hint"/>
    <Button
        android:id="@+id/close_btn"
        android:text="@string/btn_close"
        android:layout_margin="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
