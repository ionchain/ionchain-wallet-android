<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backup_mnemonic_word_rl">

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:gravity="center"
        android:text="@string/back_up"
        android:textColor="#333333" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title">

        <TextView
            android:id="@+id/hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"
            android:text="@string/mnemonic_hint"
            android:textColor="#ff0000" />


        <org.ionchain.wallet.view.widget.dialog.flowlayout.FlowLayout
            android:id="@+id/backup_mnemonic_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hint"
            android:layout_margin="18dp"
            android:background="#f1f1f1"
            android:padding="5dp">

            <TextView
                android:id="@+id/mmnemonic1"
                style="@style/mnnemonic_tv_style" />

            <TextView
                android:id="@+id/mmnemonic2"
                style="@style/mnnemonic_tv_style" />

            <TextView
                android:id="@+id/mmnemonic3"
                style="@style/mnnemonic_tv_style" />

            <TextView
                android:id="@+id/mmnemonic4"
                style="@style/mnnemonic_tv_style" />

            <TextView
                android:id="@+id/mmnemonic5"
                style="@style/mnnemonic_tv_style" />

            <TextView
                android:id="@+id/mmnemonic6"
                style="@style/mnnemonic_tv_style" />

            <TextView
                android:id="@+id/mmnemonic7"
                style="@style/mnnemonic_tv_style" />

            <TextView
                android:id="@+id/mmnemonic8"
                style="@style/mnnemonic_tv_style" />

            <TextView
                android:id="@+id/mmnemonic9"
                style="@style/mnnemonic_tv_style" />

            <TextView
                android:id="@+id/mmnemonic10"
                style="@style/mnnemonic_tv_style" />

            <TextView
                android:id="@+id/mmnemonic11"
                style="@style/mnnemonic_tv_style" />

            <TextView
                android:id="@+id/mmnemonic12"
                style="@style/mnnemonic_tv_style" />
        </org.ionchain.wallet.view.widget.dialog.flowlayout.FlowLayout>


        <Button
            android:id="@+id/close"
            android:layout_width="96dp"
            android:layout_height="30dp"
            android:layout_below="@id/backup_mnemonic_word"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/h10"
            android:background="@drawable/dialog_cancel_btn"
            android:text="@string/not_now" />

        <Button
            android:id="@+id/next_sure"
            android:layout_width="96dp"
            android:layout_height="30dp"
            android:background="@drawable/common_btn_background_main_color"
            android:layout_below="@id/backup_mnemonic_word"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/h10"
            android:text="@string/next_step"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout>
