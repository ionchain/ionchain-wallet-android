<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:id="@+id/title_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/top_bar_color" />

    <RelativeLayout
        android:id="@+id/common_title_rl"
        android:layout_width="match_parent"
        android:background="@color/top_bar_color"
        android:layout_height="?actionBarSize">

        <ImageView
            android:id="@+id/common_image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/padding_size_16dp"
            android:src="@mipmap/arrow_back_white" />

        <TextView
            android:id="@+id/common_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="导入助记词"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />

        <ImageView
            android:id="@+id/common_title_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_size_16dp"
            android:src="@mipmap/scan_white" />
    </RelativeLayout>

</LinearLayout>
