<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_margin="@dimen/h5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/tx_record_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/tx_record_bg_item"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tx_block"
                style="@style/TxRecorder"
                android:gravity="center" />

            <TextView
                android:visibility="gone"
                android:layout_below="@id/tx_block"
                android:id="@+id/tx_time"
                style="@style/TxRecorder" />


            <TextView
                android:layout_below="@id/tx_time"
                android:id="@+id/tx_value"
                style="@style/TxRecorder" />

            <TextView
                android:visibility="gone"
                android:layout_below="@id/tx_value"
                android:id="@+id/tx_fee"
                style="@style/TxRecorder" />

            <TextView
                android:layout_below="@id/tx_fee"
                android:id="@+id/tx_hash"
                style="@style/TxRecorder" />

            <TextView
                android:visibility="gone"
                android:layout_below="@id/tx_hash"
                android:id="@+id/tx_from"
                style="@style/TxRecorder"/>

            <TextView
                android:visibility="gone"
                android:layout_below="@id/tx_from"
                android:id="@+id/tx_to"
                style="@style/TxRecorder" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
