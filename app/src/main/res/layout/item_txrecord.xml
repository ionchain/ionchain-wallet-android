<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tx_record_holder"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/tx_item_state_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/home_margin_horizon" />


    <TextView
        android:id="@+id/tx_item_state_tv"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/tx_item_state_img"
        android:text=""
        android:textColor="#FF333333"
        android:textSize="13sp" />

    <TextView
        android:layout_marginTop="6dp"
        android:layout_marginStart="16dp"
        android:id="@+id/tx_item_datetime_tv"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@id/tx_item_state_tv"
        android:layout_toEndOf="@id/tx_item_state_img"
        android:gravity="center"
        android:text=""
        android:textColor="#FF999999"
        android:textSize="11sp" />


    <TextView
        android:id="@+id/tx_item_value"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/home_margin_horizon"
        android:text=""
        android:textColor="#FF2D8BF5"
        android:textSize="15.33sp" />
    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e9e9e9"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        />
</RelativeLayout>
