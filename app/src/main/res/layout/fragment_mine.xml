<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="center"
        android:background="@color/main_color"
        android:gravity="center"
        android:text="@string/nav_mine"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/walletManageRLayout"
            style="@style/A_Style_tab_mine_item_container">

            <TextView
                style="@style/A_Style_tab_mine"
                android:text="@string/wallet_management" />

            <ImageView
                style="@style/A_Style_tab_mine_item_image"
                android:src="@mipmap/ic_keyboard_arrow_right" />

            <View

                style="@style/A_Style_tab_mine_split_line" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/language_setting"
            style="@style/A_Style_tab_mine_item_container">

            <TextView
                style="@style/A_Style_tab_mine"
                android:text="@string/language_setting" />

            <ImageView
                style="@style/A_Style_tab_mine_item_image"
                android:src="@mipmap/ic_keyboard_arrow_right" />

            <View style="@style/A_Style_tab_mine_split_line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/version_info"
            style="@style/A_Style_tab_mine_item_container">

            <TextView
                style="@style/A_Style_tab_mine"
                android:text="@string/version_info_title" />

            <ImageView
                style="@style/A_Style_tab_mine_item_image"
                android:src="@mipmap/ic_keyboard_arrow_right" />

            <View style="@style/A_Style_tab_mine_split_line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/coin_type"
            style="@style/A_Style_tab_mine_item_container">

            <TextView
                style="@style/A_Style_tab_mine"
                android:text="@string/coin_type" />

            <ImageView
                style="@style/A_Style_tab_mine_item_image"
                android:src="@mipmap/ic_keyboard_arrow_right" />

            <View style="@style/A_Style_tab_mine_split_line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/about_us"
            style="@style/A_Style_tab_mine_item_container">

            <TextView
                style="@style/A_Style_tab_mine"
                android:text="@string/about_us" />

            <ImageView
                style="@style/A_Style_tab_mine_item_image"
                android:src="@mipmap/ic_keyboard_arrow_right" />

            <View style="@style/A_Style_tab_mine_split_line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/using_help"
            style="@style/A_Style_tab_mine_item_container">

            <TextView
                style="@style/A_Style_tab_mine"
                android:text="@string/using_help" />

            <ImageView
                style="@style/A_Style_tab_mine_item_image"
                android:src="@mipmap/ic_keyboard_arrow_right" />

            <View style="@style/A_Style_tab_mine_split_line" />
        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>
