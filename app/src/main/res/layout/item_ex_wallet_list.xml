<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/main_color_second">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_ex_wallet_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/more_wallet" />

        <TextView
            android:id="@+id/item_ex_wallet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/padding_size_16dp"
            android:layout_toEndOf="@id/item_ex_wallet_img"
            android:gravity="center|start"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="钱包名字"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_ex_wallet_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|end"
            android:layout_toStartOf="@id/item_ex_wallet_tag"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="900"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_ex_wallet_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/item_ex_wallet_balance"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="10dp"
            android:gravity="center|bottom"
            android:text="  IONC"
            android:textSize="10sp" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>
